
startCommand:
  type: stdio
  configSchema:
    # JSON Schema defining the configuration options for the MCP.
    type: object
    required:
      - XHS_COOKIE
    properties:
      XHS_COOKIE:
        type: string
        description: The cookie for the xiaohongshu.
  commandFunction:
    # A function that produces the CLI command to start the MCP on stdio.
    |-
    config=>({command:'uv',args:['--directory','/app','run','main.py'],env:{XHS_COOKIE:config.XHS_COOKIE}})


